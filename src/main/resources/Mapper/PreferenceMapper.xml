<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staya.asap.Repository.PreferenceRepo">
    <insert id="createPreference">
        INSERT INTO preference(id, user_id)
        VALUES (#{preference.id}, (SELECT id FROM user where email=#{preference.user.email}));
    </insert>

    <select id="findById" resultType="preferenceDTO">
        SELECT *
        FROM preference
        WHERE id = #{id};
    </select>

    <select id="findByUserId" resultType="preferenceDTO">
        SELECT *
        FROM preference
        WHERE user_id = #{userId};
    </select>
</mapper>